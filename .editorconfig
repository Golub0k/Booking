; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.yml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.scss]
indent_size = 2
indent_style = space
