{
  "@title": "Подтверждение удаления пользователя",
  "@preload": {
    "user": {
      "$from-context": {
        "path": "$response.body.data.user",
        "data": {
          "$api-data": {
            "query": "user/get_full_name",
            "id": {
              "$query-params": {
                "name": "id"
              }
            },
            "options": {
              "observe": "response"
            },
            "variables": {
              "id": {
                "$query-params": {
                  "name": "id"
                }
              }
            }
          }
        }
      }
    }
  },
  "type": "object",
  "widget": {
    "name": "container"
  },
  "model": "/",
  "properties": {
    "form": {
      "type": "object",
      "model": "#data",
      "widget": {
        "name": "form",
        "options": {
          "label": "Подтверждение удаления"
        },
        "kind": "form-popup-with-h1-style"
      },
      "properties": {
        "text": {
          "type": "string",
          "widget": {
            "name": "html",
            "class": {
              "value": "mrg-b-lg"
            }
          },
          "value": {
            "$replace": {
              "template": "<p>Вы действительно хотите удалить пользователя {{0}}?</p>",
              "data": [
                {
                  "$from-context": {
                    "path": "@preload.user.fullName"
                  }
                }
              ]
            }
          }
        },
        "actions": {
          "type": "object",
          "widget": {
            "name": "container",
            "class": {
              "group": "form-actions p-field p-grid mrg-t-lg",
              "value": "p-jc-xs-end p-autolayout"
            }
          },
          "properties": {
            "save": {
              "widget": {
                "name": "submit-button",
                "options": {
                  "label": "Удалить",
                  "clientValidation": true,
                  "dataForClientValidation": "/",
                  "showClientValidationErrorsForElement": "form",
                  "showClientValidationErrorMessage": true,
                  "clientValidationErrorMessageSummary": "Ошибка",
                  "clientValidationErrorMessageDetail": "Одно или несколько полей заполнены некорректно",
                  "workflowAction": "user.delete",
                  "workflowObjectId": {
                    "$query-params": {
                      "name": "id"
                    }
                  },
                  "dataForSubmit": {
                    "$var": {
                      "path": "#data"
                    }
                  },
                  "showSuccessMessage": true,
                  "successMessageSummary": "Удаление пользователя",
                  "successMessageDetail": "Пользователь успешно удален",
                  "urlInCaseOfSuccess": "/cabinet/user/list",
                  "showServerValidationErrorMessage": true,
                  "serverValidationErrorMessageSummary": "Удаление пользователя",
                  "serverValidationErrorMessageDetail": "Форма содержит ошибки",
                  "showOtherErrorMessageSummary": true,
                  "otherErrorMessageSummary": "Удаление пользователя",
                  "otherErrorMessageDetail": "Непредвиденная ошибка",
                  "reloadTable": true,
                  "closePopup": false
                },
                "class": {
                  "value": "mrg-r-sm"
                }
              }
            },
            "cancel": {
              "widget": {
                "name": "button",
                "options": {
                  "label": "Отмена"
                },
                "events": {
                  "click": {
                    "$close-popup": null
                  }
                },
                "kind": "button-btn-outline-last-style"
              }
            }
          }
        }
      }
    }
  }
}
